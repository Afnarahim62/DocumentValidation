<?xml version = "1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="document_verification">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" comment=" Id" identity="true"/>
        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="true" comment="order id"/>
        <column xsi:type="int" name="quote_id" padding="10" unsigned="true" nullable="true" comment="quote id"/>
        <column xsi:type="varchar" name="file_name" nullable="true" length="255" comment="file name"/>
        <column xsi:type="varchar" name="file_path" nullable="true" length="255" comment="file path"/>
        <column xsi:type="varchar" name="is_verified" nullable="true" comment="set verification true or false"/>
        <column xsi:type="varchar" name="message" nullable="true" length="255" comment="message"/>
        <column xsi:type="timestamp" name="created_at"  comment="Time of event"/>
        <column xsi:type="timestamp" name="updated_at"  comment="updated at"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="DOUCUMENTVERIFICATION_ID_SALESORDER_ENTITYID"
                    table="document_verification" column="order_id" referenceTable="sales_order" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
   </table>
    <table name = "check_category_verification">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" comment=" Id"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="true" comment="customer id"/>
        <column xsi:type="int" name="category_id" padding="10" unsigned="true" nullable="true" comment="category id"/>
        <column xsi:type="boolean" name="is_verified" nullable="true" comment="set verification true or false"/>
        <column xsi:type="timestamp" name="created_at"  comment="Time of event"/>
        <column xsi:type="timestamp" name="updated_at"  comment="updated at"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
   </table>
   <table name="sales_order" resource="sales" engine="innodb" comment="Sales Order">
        <column xsi:type="varchar" name="document_added" nullable="true" length="32" comment="Document Added"/>
   </table>
</schema>